[Unit]
Description=Gunicorn daemon for {{ host }}
Before=nginx.service
After=network.target

[Service]
WorkingDirectory=/home/{{ ansible_ssh_user }}/{{ host }}
ExecStart={{ site_directory }}/virtualenv/bin/gunicorn \
  --name {{ host }} \
  --pythonpath /home/{{ ansible_ssh_user }}/{{ host }} \
  --bind unix:/home/{{ ansible_ssh_user }}/gunicorn-{{ host }}.socket \
  --log-file /home/{{ ansible_ssh_user }}/gunicorn-{{ host }}.log \
  --config /etc/gunicorn.d/gunicorn.py app
Restart=always
SyslogIdentifier=gunicorn-{{ host }}
User={{ ansible_ssh_user }}
Group={{ ansible_ssh_user }}

[Install]
WantedBy=multi-user.target
