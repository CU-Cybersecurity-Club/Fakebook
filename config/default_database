DROP TABLE IF EXISTS users;
DROP TABLE IF EXISTS posts;
DROP TABLE IF EXISTS chats;
DROP TABLE IF EXISTS achievements;
CREATE TABLE IF NOT EXISTS users (username TEXT, password_hash TEXT, email TEXT, picture TEXT);
CREATE TABLE IF NOT EXISTS posts (author TEXT, posted TEXT, content TEXT, player TEXT);
CREATE TABLE IF NOT EXISTS chats (author TEXT, posted TEXT, content TEXT);
CREATE TABLE IF NOT EXISTS achievements (name TEXT, stolen_token INTEGER, password_mel INTEGER,
	alert INTEGER, created_account INTEGER, server_error INTEGER,
	find_comment INTEGER, force_redirect INTEGER, unlisted_path INTEGER);
